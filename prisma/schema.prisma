// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model LeverancierCategory {
  id            String        @id @default(cuid())
  name          String        @unique
  slug          String        @unique
  description   String        @db.Text
  leveranciers  Leverancier[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("leverancier_categories")
}

model Leverancier {
  id          String                 @id @default(cuid())
  name        String
  slug        String                 @unique
  logo        String?
  customers   String
  description String                 @db.Text
  rating      Float                  @default(4.0)
  color       String                 @default("from-green-600 to-green-700")
  
  stroom      String                 @default("€0,25 per kWh")
  gas         String                 @default("€1,35 per m³")
  vastrecht   String                 @default("€12,50 per maand")
  
  features    Json
  voordelen   Json
  nadelen     Json
  
  categoryId  String?
  category    LeverancierCategory?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  published   Boolean                @default(true)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt

  @@map("leveranciers")
}

enum ContactStatus {
  UNREAD
  READ
  DRAFT
}

model ContactMessage {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String        @db.Text
  status    ContactStatus @default(UNREAD)
  isDeleted Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("contact_messages")
}

model BlogPost {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  excerpt         String?   @db.Text
  content         String    @db.LongText
  featuredImage   String?
  
  // SEO Fields
  metaTitle       String?
  metaDescription String?   @db.Text
  metaKeywords    String?
  
  published       Boolean   @default(false)
  publishedAt     DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@map("blog_posts")
}
